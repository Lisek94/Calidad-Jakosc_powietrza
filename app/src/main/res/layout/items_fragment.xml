<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mobile.ui.items.ItemsFragment"
    android:background="@color/grey">


    <GridLayout
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:columnCount="2"
        android:rowCount="2">


        <LinearLayout
            android:id="@+id/view_quality"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" >

            <ImageView
                android:contentDescription="@string/logo_quality"
                android:id="@+id/logo_Quality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_quality_icon" />

            <TextView
                android:id="@+id/qualityTextView"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="48sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_temperature"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1">

            <ImageView
                android:contentDescription="@string/logo_temperature"
                android:id="@+id/logo_Temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_temperature_icon" />

            <TextView
                android:id="@+id/numberTemperatureTextView"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="48sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_humidity"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" >

            <ImageView
                android:contentDescription="@string/logo_humidity"
                android:id="@+id/logo_Humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_humidity_icon" />

            <TextView
                android:id="@+id/numberHumidityTextView"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="48sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/view_pressure"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" >

            <ImageView
                android:contentDescription="@string/logo_pressure"
                android:id="@+id/logo_Pressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_pressure_icon" />

            <TextView
                android:id="@+id/numberPressureTextView"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="32sp" />

        </LinearLayout>
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>